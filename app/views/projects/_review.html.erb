    <h3>Reviews</h3>

  <p>Reviews for <%= @project.title %></p>

  <% @project.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.email %></em>
        Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>
  </div>
  <% if current_user %>
  <div>
      <h4>New Review</h4>

  <%= form_for([@project, @review]) do |f| %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit "Submit Comment", :id => "review_submit"%>
    </div>
  <% end %>


  </div>

  <% else %>
    <p>Please <%= link_to "login", new_session_path %> to add a review</p>
  <% end %>
