<div class="margin40"></div>


<div class="row">
	<div class="medium-6 columns">
		<h1>Edit Profile</h1>

		<%= form_for @user do |f| %>
			<div class="field">
				<%= f.label :username %>
				<%= f.text_field :username %>
			</div>
			<div class="field">
				<%= f.label :biography %>
				<%= f.text_area :biography %>
			</div>
			<div class="field">
				<%= f.label :phone %>
				<%= f.text_field :phone %>
			</div>
			<div class="field">
				<%= f.label :email %>
				<%= f.text_field :email %>
			</div>
			<div class="action">
				<%= f.submit class: 'button small radius right', value: 'Save Changes' %>
			</div>
		<% end %>

	</div>
</div>