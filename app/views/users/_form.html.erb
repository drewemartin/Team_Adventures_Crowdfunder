<div class="row">
	<div class="medium-6 columns">
		<%= form_for @user do |f| %>
			<div class="field">
				<%= f.label :username %>
				<%= f.text_field :username %>
			</div>
			<div class="field">
				<%= f.label :email %>
				<%= f.text_field :email %>
			</div>
			<div class="field">
				<%= f.label :biography %>
				<%= f.text_area :biography, placeholder: "please tell us about you"%>  
			</div>
			<div class="field">
				<%= f.label :phone %>
				<%= f.text_field :phone %>
			</div>
			<div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
			</div>
			<div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
			</div>
			<%= f.submit class: 'button' %>
		<% end %>
	</div><!-- column -->
</div><!-- row -->
