
<div class="row">
	<div class="wrapper">
	<div class="medium-6 medium-centered  padding_div columns">
		 <% if flash[:alert] %>
      <div data-alert class="alert-box alert radius"> <%= flash[:alert] %> </div>
     <% end %>
		<h3>Log In </h3>
		<%= form_tag sessions_path do %>
		  <div class="field">
		    <%= label_tag :email %><br/>
		    <%= text_field_tag :email, params[:email] %>
		  </div>
		  <div class="field">
		    <%= label_tag :password %><br/>
		    <%= password_field_tag :password %>
		  </div>
		  <div class="actions"><%= submit_tag "Log in",class: 'button tiny success round expand' %></div>
		<% end %>

	</div>
 </div>
</div>